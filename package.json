{
  "name": "kubectl-ui",
  "private": true,
  "version": "2.3.6",
  "description": "A modern desktop application for managing Kubernetes clusters with an intuitive UI",
  "author": {
    "name": "Sapir Oded",
    "email": "kubectl-ui@example.com"
  },
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --port 5173",
    "prod": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "node src/backend/server.js",
    "generate-icon": "node scripts/generate-icon.js",
    "update-readme": "node scripts/update-readme-version.js",
    "electron": "electron .",
    "electron:dev": "electron . --debug",
    "prebuild:electron": "npm run build",
    "electron:build": "npm run prebuild:electron && electron-builder",
    "electron:build:mac": "npm run prebuild:electron && electron-builder --mac",
    "electron:build:win": "npm run prebuild:electron && electron-builder --win",
    "electron:build:linux": "npm run prebuild:electron && electron-builder --linux",
    "electron:build:all": "npm run prebuild:electron && electron-builder -mwl"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.300.0",
    "mime-types": "^2.1.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.0",
    "ws": "^8.18.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
